{
    "$schema": "http://json.schemastore.org/template",
    "author": "Sebin Suresh",
    "classifications": ["Test"],
    "identity": "TestClassTemplate",
    "name": "Test Class Template",
    "shortName": "testclass",
    "sourceName": "TemplateClass",
    "symbols": {
        "className": {
            "type": "parameter",
            "datatype": "text",
            "replaces": "TemplateClass",
            "description": "Name of test class being generated"
        },
        "async": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false",
            "description": "Whether to generate an async test class or not"
        }
    },
    "tags": {
        "language": "C#",
        "type": "item"
    },
    "primaryOutputs": [
        {
            "path": "./Tests/{{className}}.cs"
        }
    ]
}